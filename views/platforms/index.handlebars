<h4>Platforms</h4>
<a href="/platforms/new" class="btn btn-success">New</a>
<table class="table table-striped table-hover mt-3">
    <thead>
        <tr class="table-danger">
            <th class="w-25">Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        {{#each platforms}}
            <tr>
                <td><a href='/platforms/view/{{platformID}}'>{{name}}</a></td>
                <td>{{description}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>
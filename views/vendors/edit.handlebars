<h4>{{vendor.name}} edit</h4>
<form method="POST" action="/vendors/edit">
    {{#with vendor}}
        <div class="mb-2">
            <input type="hidden" id="vendorID" name="vendorID" value="{{vendorID}}" />
            <label class="form-label" for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value='{{name}}' />
        </div>

        <div class="mb-2">
            <label class="form-label" for="website">Website</label>
            <input type="text" class="form-control" id="website" name="website" value='{{website}}' />
        </div>
    {{/with}}
    <input type="submit" value="Submit" class="btn btn-warning" />
    <a href="/vendors" class="btn btn-secondary">Cancel</a>
</form>
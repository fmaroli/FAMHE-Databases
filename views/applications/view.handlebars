{{#with application}}
    <div class="row">
        <div class="col-10">
            <h4>Application Details</h4>
        </div>
        <div class="col-2 text-end">
            {{{showRating rating}}}
        </div>
    </div>
    <div class="border border-2 rounded-4 p-3 bd-highlight">
        <div class="row mt-2">
            <div class="col-8">
                <label class="form-label" for="name">Name</label>
                <span class="form-control" id="name">{{name}}</span>
            </div>
            <div class="col-4">
                <label class="form-label" for="vendor">Vendor</label>
                <span class="form-control" id="vendor">{{vendor}}</span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <label class="form-label" for="description">Platform</label>
                <ul class="list-group">
                {{#if platforms}}
                    {{#each platforms}}
                        <li class="list-group-item" aria-disabled="true">{{name}}</li>
                    {{/each}}
                {{else}}
                    <li class="list-group-item" aria-disabled="true">No platform selected</li>
                {{/if}}
                </ul>
            </div>
            <div class="col-6">
                <label class="form-label" for="description">Category</label>
                <ul class="list-group">
                {{#if categories}}
                    {{#each categories}}
                        <li class="list-group-item" aria-disabled="true">{{name}}</li>
                    {{/each}}
                {{else}}
                    <li class="list-group-item" aria-disabled="true">No category selected</li>
                {{/if}}
                </ul>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <label class="form-label" for="description">Short description</label>
                <span class="form-control" id="description">{{description}}</span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <label class="form-label" for="url">Url</label>
                <span class="form-control" id="url">{{url}}</span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label class="form-label" for="price">Price</label>
                <span class="form-control" id="price">{{price}}</span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                {{#if displayPhoto}}
                    <img class="seld" src="{{displayPhoto}}" class="pt-2" id="displayPhoto" alt="{{name}} logo" />
                {{else}}
                    <label for="displayPhoto" class="form-label">Photo</label>
                {{/if}}
            </div>
        </div>
    </div>
{{/with}}

<div class="row mt-3">
    <div class="col-12">
        <a href="/applications/edit/{{application.applicationID}}" class="btn btn-primary">Edit</a>
        <a href="/applications" class="btn btn-secondary">Close</a>
        <a href="/writeReview/{{application.applicationID}}" class="btn btn-info">Write review</a>
    </div>
</div>
